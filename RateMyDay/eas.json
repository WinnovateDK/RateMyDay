{
  "build": {
    "production": {
      "android": {
        "image": "latest",
        "resourceClass": "medium",
        "buildType": "apk",
        "cache": {
          "key": "gradle-deps-production-v1",
          "paths": ["~/.gradle/caches", "~/.gradle/wrapper", "android/.gradle"]
        },
        "env": {
          "GRADLE_OPTS": "-Dorg.gradle.caching=true -Dorg.gradle.parallel=true -Dorg.gradle.daemon=false"
        }
      }
    },
    "development": {
      "android": {
        "image": "latest",
        "buildType": "developmentClient",
        "cache": {
          "key": "gradle-deps-dev-v1",
          "paths": ["~/.gradle/caches", "~/.gradle/wrapper"]
        }
      }
    },
    "preview": {
      "android": {
        "image": "latest",
        "buildType": "apk"
      }
    }
  }
}